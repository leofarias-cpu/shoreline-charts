import * as React from 'react'
import {
  createSystem,
  Page,
  PageHeader,
  PageTitle,
  PageContent,
  {{#if actions.hasActions}}
  PageActions,
  Button,
  {{/if}}
} from '@vtex/admin-ui'
import { useRuntime } from 'vtex.render-runtime'

const [Provider] = createSystem({
  key: '{{kebabCase name}}-page'
})

export default function {{pascalCase name}}Page() {
  const { navigate } = useRuntime()

  {{#if hasBackButton}}
  const onPopNavigation = () => {
    navigate({
      page: 'admin.app.{{kebabCase reference}}'
    })
  }
  {{/if}}

  return (
    <Provider>
      <Page>
        <PageHeader {{#if hasBackButton}}onPopNavigation={onPopNavigation}{{/if}}>
          <PageTitle>{{pascalCase name}}</PageTitle>
          {{#if actions.hasActions}}
          <PageActions>
            {{#if actions.hasTertiaryAction}}
            <Button variant="tertiary">
              tertiary
            </Button>
            {{/if}}
            {{#if actions.hasSecondaryAction}}
            <Button variant="secondary">
              Secondary
            </Button>
            {{/if}}
            {{#if actions.hasPrimaryAction}}
            <Button>Primary</Button>
            {{/if}}
          </PageActions>
          {{/if}}
        </PageHeader>
        <PageContent>
          Content
        </PageContent>
      </Page>
    </Provider>
  )
}
