{
  "name": "@vtex/shoreline-styles",
  "version": "0.6.1",
  "main": "./dist/index.css",
  "module": "./dist/index.css",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": "./dist/index.css",
    "./no-layer": "./dist/index-no-layer.css"
  },
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "prebuild": "rm -rf dist",
    "dev": "concurrently -p [{name}] -n styles:layer@shoreline,styles:no-layer@shoreline -c bgGreen,bgBlue \"pnpm run dev:layer\" \"pnpm run dev:no-layer\"",
    "dev:layer": "postcss ./src/index.scss -o dist/index.css -w",
    "dev:no-layer": "postcss ./src/index-no-layer.scss -o dist/index-no-layer.css -w",
    "build": "pnpm run build:layer && pnpm run build:no-layer",
    "build:layer": "postcss ./src/index.scss -o dist/index.css",
    "build:no-layer": "postcss ./src/index-no-layer.scss -o dist/index-no-layer.css"
  },
  "repository": {
    "directory": "packages/styles",
    "type": "git",
    "url": "git+https://github.com/vtex/shoreline.git"
  },
  "bugs": {
    "url": "https://github.com/vtex/shoreline/issues"
  },
  "devDependencies": {
    "@csstools/postcss-sass": "5.1.1",
    "concurrently": "8.2.2",
    "cssnano": "6.0.2",
    "postcss": "8.4.32",
    "postcss-cli": "11.0.0",
    "postcss-import": "15.1.0",
    "postcss-preset-env": "9.3.0",
    "postcss-scss": "4.0.9"
  }
}
