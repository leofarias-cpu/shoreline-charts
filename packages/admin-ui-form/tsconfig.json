{
  "extends": "@vtex/tsconfig",
  "compilerOptions": {
    "stripInternal": true,
    "isolatedModules": true,
    "strict": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist/declarations"
  },
  "exclude": ["node_modules", "dist", "**/*.test.*", "**/*.stories.*"],
  "include": ["./src"]
}
