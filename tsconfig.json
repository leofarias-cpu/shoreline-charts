{
  "extends": "@vtex/tsconfig",
  "compilerOptions": {
    "stripInternal": true,
    "isolatedModules": true,
    "strict": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.mts",
    "**/*.cts",
    "**/*.js",
    "**/*.cjs",
    "**/*.mjs"
  ],
  "exclude": ["node_modules", "dist", "test", "stories"]
}
