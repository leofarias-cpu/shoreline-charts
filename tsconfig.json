{
  "extends": "@vtex/tsconfig",
  "compilerOptions": {
    "stripInternal": true,
    "isolatedModules": true,
    "strict": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": true, 
    "target": "ES6",
    "importHelpers": true
  },
  "exclude": ["node_modules", "dist", "test", "stories"]
}
