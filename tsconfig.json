{
  "extends": "@vtex/tsconfig",
  "compilerOptions": {
    "baseUrl": "./",
    "stripInternal": true,
    "isolatedModules": true,
    "declaration": true,
    "strict": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "incremental": true,
    "declarationMap": true,
    "noEmit": true
  },
  "exclude": ["node_modules", "dist", "stories", "test"]
}
