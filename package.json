{
  "name": "onda",
  "private": true,
  "workspaces": [
    "components/*",
    "styleguides/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vtex/onda.git"
  },
  "engines": {
    "yarn": "^1.17.3",
    "node": ">=10.13.0"
  },
  "scripts": {
    "lerna": "lerna",
    "build": "lerna run build",
    "test": "lerna run test",
    "publish:packages": "lerna publish --yes",
    "publish:canary": "lerna publish --canary --yes",
    "clean": "lerna clean && lerna run clean",
    "format": "prettier --write \"packages/**/*.{ts,js,tsx,jsx,json}\"",
    "bootstrap": "yarn install --frozen-lockfile && yarn build",
    "lint": "eslint styleguides/ --ext .js,.ts,.jsx,.tsx",
    "storybook:admin": "yarn --cwd styleguides/admin-ui storybook",
    "storybook:brand": "yarn --cwd styleguides/brand-ui storybook",
    "build-storybook:admin": "yarn --cwd styleguides/admin-ui build-storybook",
    "build-storybook:brand": "yarn --cwd styleguides/brand-ui build-storybook"
  },
  "devDependencies": {
    "@babel/core": "^7.11.4",
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@commitlint/prompt": "^9.1.2",
    "@storybook/addon-a11y": "^6.0.21",
    "@storybook/addon-actions": "^6.0.18",
    "@storybook/addon-essentials": "^6.0.18",
    "@storybook/addon-links": "^6.0.18",
    "@storybook/react": "^6.0.18",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.0.2",
    "@types/react": "^16.9.47",
    "@types/react-dom": "^16.9.8",
    "@types/theme-ui": "^0.3.6",
    "@vtex/prettier-config": "^0.3.1",
    "@vtex/tsconfig": "^0.5.0",
    "babel-loader": "^8.1.0",
    "commitizen": "^4.2.0",
    "eslint": "^7.7.0",
    "eslint-config-vtex-react": "^6.7.8",
    "husky": "^4.2.5",
    "jest-emotion": "^10.0.32",
    "lerna": "^3.22.1",
    "prettier": "^2.1.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "tsdx": "^0.13.3",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "@emotion/core": "^10.0.35",
    "reakit": "^1.2.3",
    "theme-ui": "^0.3.1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
