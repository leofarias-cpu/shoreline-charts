{
  "name": "onda",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vtex/onda.git"
  },
  "engines": {
    "yarn": "^1.17.3",
    "node": ">=10.13.0"
  },
  "scripts": {
    "lerna": "lerna",
    "build": "lerna run build",
    "build:fast": "lerna run build:fast",
    "test": "lerna run test",
    "start": "lerna run start --parallel",
    "version": "lerna run version",
    "prepublish:main": "yarn && yarn build",
    "prepublish:experimental": "yarn && yarn build",
    "publish:main": "lerna publish",
    "publish:experimental": "lerna publish --preid experimental --dist-tag experimental",
    "clean": "lerna clean && lerna run clean",
    "format": "prettier --write \"packages/**/*.{ts,js,tsx,jsx,json}\"",
    "lint": "eslint packages/ --ext .js,.ts,.jsx,.tsx",
    "storybook": "start-storybook -p 6006",
    "build:storybook": "yarn run build && yarn run build-storybook",
    "site": "yarn --cwd packages/site develop",
    "build:site": "yarn --cwd packages/site build-site",
    "commit": "cz"
  },
  "devDependencies": {
    "@babel/core": "^7.11.4",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.11.0",
    "@babel/plugin-proposal-optional-chaining": "^7.11.0",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@commitlint/prompt": "^9.1.2",
    "@rollup/plugin-url": "^5.0.1",
    "@storybook/addon-a11y": "^6.0.21",
    "@storybook/addon-actions": "^6.0.18",
    "@storybook/addon-essentials": "^6.0.18",
    "@storybook/addon-links": "^6.0.18",
    "@storybook/react": "^6.0.18",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.0.2",
    "@testing-library/react-hooks": "^3.4.1",
    "@testing-library/user-event": "^13.0.4",
    "@types/jest-axe": "^3.5.1",
    "@types/react": "^16.9.47",
    "@types/react-dom": "^16.9.8",
    "@types/testing-library__jest-dom": "^5.9.5",
    "@vtex/prettier-config": "^0.3.1",
    "@vtex/tsconfig": "^0.5.6",
    "babel-loader": "^8.1.0",
    "babel-plugin-macros": "^2.8.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "babel-plugin-typescript-to-proptypes": "^1.4.1",
    "babel-preset-gatsby": "0.5.10",
    "commitizen": "^4.2.0",
    "husky": "^4.2.5",
    "jest-axe": "^4.0.0",
    "jest-emotion": "^10.0.32",
    "lerna": "^3.22.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "raw.macro": "^0.4.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-test-renderer": "^16.13.1",
    "tsdx": "^0.13.3",
    "typescript": "^4.0.2",
    "url-loader": "^4.1.0",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.1",
    "eslint": "^7.19.0",
    "eslint-config-vtex": "^14.1.0",
    "eslint-config-vtex-react": "^8.1.0",
    "eslint-plugin-graphql": "^4.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-tsc": "^2.0.0",
    "lint-staged": "^10.5.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "lint-staged && yarn test --silent"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn lint --fix"
    ],
    "*.{gql,json,yml,md}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
