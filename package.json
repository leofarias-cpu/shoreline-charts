{
  "name": "onda",
  "private": true,
  "workspaces": [
    "components/*",
    "styleguides/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "clean": "lerna clean && lerna run clean",
    "format": "prettier --write \"packages/**/*.{ts,js,tsx,jsx,json}\"",
    "bootstrap": "yarn install --frozen-lockfile && yarn build:packages",
    "storybook:admin": "cd styleguides/admin && yarn run storybook",
    "storybook:brand": "cd styleguides/brand && yarn run storybook"
  },
  "devDependencies": {
    "@babel/core": "^7.11.4",
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@commitlint/prompt": "^9.1.2",
    "@storybook/addon-actions": "^6.0.16",
    "@storybook/addon-essentials": "^6.0.16",
    "@storybook/addon-links": "^6.0.16",
    "@storybook/react": "^6.0.16",
    "@types/react": "^16.9.46",
    "@types/react-dom": "^16.9.8",
    "@types/theme-ui": "^0.3.6",
    "@vtex/prettier-config": "^0.3.1",
    "@vtex/tsconfig": "^0.5.0",
    "babel-loader": "^8.1.0",
    "commitizen": "^4.2.0",
    "husky": "^4.2.5",
    "lerna": "^3.22.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "tsdx": "^0.13.3",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "@emotion/core": "^10.0.35",
    "reakit": "^1.2.2",
    "theme-ui": "^0.3.1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
