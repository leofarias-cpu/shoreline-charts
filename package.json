{
  "name": "root",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "turbo": {
    "baseBranch": "origin/main",
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": []
      },
      "test": {
        "dependsOn": [
          "build"
        ],
        "outputs": []
      },
      "lint": {
        "outputs": []
      },
      "dev": {
        "cache": false
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vtex/admin-ui.git"
  },
  "engines": {
    "yarn": "^1.17.3",
    "node": ">=10.13.0"
  },
  "scripts": {
    "lerna": "lerna",
    "turbo": "turbo",
    "build": "turbo run build",
    "test": "turbo run test --parallel",
    "dev": "turbo run dev --parallel --no-cache",
    "version": "lerna run version",
    "prepublish:main": "yarn && yarn build && yarn check --integrity",
    "prepublish:experimental": "yarn && yarn build",
    "publish:main": "lerna publish",
    "publish:experimental": "lerna publish --preid experimental --dist-tag experimental",
    "clean": "turbo clean && turbo run clean",
    "format": "prettier --write \"packages/**/*.{ts,js,tsx,jsx,json}\"",
    "lint": "eslint packages/ --ext .js,.ts,.jsx,.tsx",
    "storybook": "start-storybook -p 6006",
    "build:storybook": "yarn run build && yarn run build-storybook",
    "chromatic": "chromatic --exit-zero-on-changes --build-script-name=build:storybook",
    "docs": "yarn --cwd packages/admin-ui-docs start",
    "build:docs": "yarn --cwd packages/admin-ui-docs build-docs",
    "commit": "cz",
    "build:ci": "lerna run build:fast",
    "test:ci": "turbo run test",
    "lint:ci": "yarn lint"
  },
  "devDependencies": {
    "rollup": "2.70.1",
    "@rollup/plugin-babel": "5.3.1",
    "@rollup/plugin-commonjs": "21.0.2",
    "@rollup/plugin-node-resolve": "13.1.3",
    "@rollup/plugin-replace": "4.0.0",
    "rollup-plugin-terser": "7.0.2",
    "chalk": "4.1.2",
    "rimraf": "3.0.2",
    "cross-spawn": "7.0.3",
    "fs-extra": "10.0.1",
    "@babel/core": "7.17.7",
    "@babel/preset-env": "7.16.11",
    "@babel/preset-react": "7.16.7",
    "@babel/preset-typescript": "7.16.7",
    "babel-plugin-module-resolver": "4.1.0",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.11.0",
    "@babel/plugin-proposal-optional-chaining": "^7.11.0",
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@commitlint/prompt": "^9.1.2",
    "@rollup/plugin-url": "^5.0.1",
    "@storybook/addon-a11y": "^6.4.19",
    "@storybook/addon-actions": "^6.4.19",
    "@storybook/addon-essentials": "^6.4.19",
    "@storybook/addon-links": "^6.4.19",
    "@storybook/react": "^6.4.19",
    "@testing-library/jest-dom": "5.16.2",
    "@testing-library/react": "12.1.4",
    "@testing-library/react-hooks": "7.0.2",
    "@testing-library/user-event": "13.5.0",
    "@testing-library/dom": "8.11.3",
    "@types/jest-axe": "3.5.3",
    "@types/react": "17.0.40",
    "@types/react-dom": "17.0.13",
    "@types/testing-library__jest-dom": "5.14.3",
    "@typescript-eslint/eslint-plugin": "5.15.0",
    "@typescript-eslint/parser": "5.15.0",
    "@vtex/prettier-config": "^0.3.1",
    "@vtex/tsconfig": "^0.5.6",
    "babel-loader": "^8.1.0",
    "babel-plugin-macros": "^2.8.0",
    "babel-plugin-typescript-to-proptypes": "2.0.0",
    "babel-preset-gatsby": "0.5.10",
    "chromatic": "^6.4.3",
    "commitizen": "^4.2.0",
    "eslint": "^7.19.0",
    "eslint-config-vtex": "^14.1.0",
    "eslint-config-vtex-react": "^8.1.0",
    "eslint-plugin-graphql": "^4.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-tsc": "^2.0.0",
    "husky": "^4.2.5",
    "jest-axe": "6.0.0",
    "jest-emotion": "^10.0.32",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "raw.macro": "^0.4.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-test-renderer": "^16.13.1",
    "tsdx": "^0.13.3",
    "turbo": "^1.0.3",
    "typescript": "4.6.2",
    "url-loader": "^4.1.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "yarn test",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn lint --fix"
    ],
    "*.{gql,json,yml,md}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
