{
  "packages": ["components/*", "styleguides/*"],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "registry": "https://registry.npmjs.org/",
  "loglevel": "success",
  "ignoreChanges": [
    "CHANGELOG.md",
    "**/__fixtures__/**",
    "**/*.snap",
    "**/*.test.*",
    "**/*.stories.*",
    "**/*.md"
  ]
}
